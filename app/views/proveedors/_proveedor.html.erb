<div id="<%= dom_id proveedor %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Nombre:</strong>
    <%= proveedor.nombre %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this proveedor", proveedor, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this proveedor', edit_proveedor_path(proveedor), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>

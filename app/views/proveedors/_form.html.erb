<%= form_with(model: proveedor, class: "contents") do |form| %>
  <% if proveedor.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(proveedor.errors.count, "error") %> No se puede guardar este tipo de Proveedor:</h2>
      <ul>
        <% proveedor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label "Nombre" %>
    <%= form.text_field :nombre, class: "border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600 mt-1", placeholder: "Nombre Proveedor" %>
  </div>
  <div class="inline">
    <%= form.submit "Finalizar Proveedor", class: "border-2 border-indigo-700 bg-indigo-700 text-white py-1 w-full rounded-md hover:bg-transparent hover:text-indigo-700 font-semibold mt-5 cursor-pointer" %>
  </div>
<% end %>

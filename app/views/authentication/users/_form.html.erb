<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> No se puede guardar este tipo de Categoria:</h2>
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= pp @user.admin %>
  <div>
    <%= form.label "Nombre", style: "display: block" %>
    <%= form.text_field :username, class: "border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600 mt-1", placeholder: "Nombre Usuario"%>
  </div>
  <div>
    <%= form.label "Admin", style: "display: block" %>
    <%= form.select :admin, ['true','false']%>
  </div>
  <div class="flex justify-center mt-2">
    <%= form.submit "Actualizar Usuario", class: "border-2 border-indigo-700 bg-indigo-700 text-white py-1 w-full rounded-md hover:bg-transparent hover:text-indigo-700 font-semibold mt-5 cursor-pointer" %>
  </div>
<% end %>

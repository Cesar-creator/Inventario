<div class="flex justify-center items-center h-screen bg-indigo-600">
  <div class="w-96 p-6 shadow-lg bg-white rounded-md">
    <%= form_with(model: @user) do |form| %>
      <% @user.errors.full_messages.each do |error| %>
        <div>
          <%= error %>
        </div>
      <% end %>
      <h2 class="text-3xl block text-center font-semibold">Registro de Usuario</h2>
      <div class="mt-3">
        <%= form.label "Nombre", class: "block text-base mb-2" %>
        <%= form.text_field :username,  required: true, class: "border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600", placeholder: "Nombre Completo"  %>
      </div>
      <div class="mt-3">
        <%= form.label "Correo", class: "block text-base mb-2" %>
        <%= form.email_field :email,  required: true, class: "border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600", placeholder: "Email o Correo"  %>
      </div>
      <div class="mt-3">
        <%= form.label "Contraseña", class: "block text-base mb-2" %>
        <%= form.password_field :password,  required: true, class: "border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600", placeholder: "Contraseña o Password"  %>
      </div>
      <div class="mt-3">
        <%= form.submit "Crear Usuario", class: "border-2 border-indigo-700 bg-indigo-700 text-white py-1 w-full rounded-md hover:bg-transparent hover:text-indigo-700 font-semibold"%>
      </div>
    <% end %>
  </div>
</div>

<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> No se puede guardar este tipo de Categoria:</h2>
      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label "Nombre", style: "display: block" %>
    <%= form.text_field :nombre, class: "border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600 mt-1", placeholder: "Nombre Categoria"%>
  </div>
  <div class="flex justify-center mt-2">
    <%= form.submit "Terminar Categoria", class: "border-2 border-indigo-700 bg-indigo-700 text-white py-1 w-full rounded-md hover:bg-transparent hover:text-indigo-700 font-semibold mt-5 cursor-pointer" %>
  </div>
<% end %>
